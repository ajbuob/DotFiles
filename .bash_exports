#!/usr/bin/env bash

export AWS_PROFILE=terraform

#/Library/Java/JavaVirtualMachines/jdk1.8.0_241.jdk/Contents/Home
export JAVA8_HOME=`/usr/libexec/java_home -v1.8`

#/Library/Java/JavaVirtualMachines/jdk-11.0.6.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-13.0.2.jdk/Contents/Home
export JAVA13_HOME=`/usr/libexec/java_home -v13`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
export HOMEBREW_EDITOR=vim

export PYENV_ROOT=~/.pyenv

export ANT_HOME=${BREW_CELLAR_DIR}/ant/1.10.7_1/libexec
export MVN_HOME=${BREW_CELLAR_DIR}/maven/3.6.3_1/libexec

export TOMCAT_HOME=${BREW_CELLAR_DIR}/tomcat/9.0.31/libexec

export HADOOP_HOME=${BREW_CELLAR_DIR}/hadoop/3.2.1
export HIVE_HOME=${BREW_CELLAR_DIR}/hive/3.1.2/libexec

export PG_HOME=${BREW_CELLAR_DIR}/postgresql/12.2
export PG_DATA=/usr/local/var/postgres
export PG_CONFIG=/usr/local/var/postgres

export MONGO_HOME=${BREW_CELLAR_DIR}/mongodb-community/4.2.3
export MONGO_DATA=/usr/local/var/mongodb
export MONGO_LOGS=/usr/local/var/log/mongodb
export MONGO_CONFIG=/usr/local/etc

export NEO4J_HOME=${BREW_CELLAR_DIR}/neo4j/3.5.14/libexec
