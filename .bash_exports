#!/usr/bin/env bash

#/Library/Java/JavaVirtualMachines/jdk1.8.0_331.jdk/Contents/Home
export JAVA8_HOME="$(/usr/libexec/java_home -v1.8.0)"

#/Library/Java/JavaVirtualMachines/jdk-11.0.15.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-17.0.3.jdk/Contents/Home
export JAVA17_HOME=`/usr/libexec/java_home -v17`

#/Library/Java/JavaVirtualMachines/jdk-18.0.1.jdk/Contents/Home
export JAVAEX_HOME=`/usr/libexec/java_home -v18`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
export HOMEBREW_EDITOR=vim

export PYENV_ROOT=~/.pyenv

export ANT_HOME=${BREW_CELLAR_DIR}/ant/1.10.12/libexec
export MVN_HOME=${BREW_CELLAR_DIR}/maven/3.8.5/libexec
export GRADLE_HOME=${BREW_CELLAR_DIR}/gradle/7.4.2/libexec

export TOMCAT_HOME=${BREW_CELLAR_DIR}/tomcat/10.0.21/libexec

export HADOOP_HOME=${BREW_CELLAR_DIR}/hadoop/3.3.3
export HIVE_HOME=${BREW_CELLAR_DIR}/hive/3.1.2_3/libexec

export PG_HOME=${BREW_CELLAR_DIR}/postgresql/14.2_1
export PG_DATA=/usr/local/var/postgres
export PG_CONFIG=/usr/local/var/postgres

export MONGO_HOME=${BREW_CELLAR_DIR}/mongodb-community/5.0.7
export MONGO_DATA=/usr/local/var/mongodb
export MONGO_LOGS=/usr/local/var/log/mongodb
export MONGO_CONFIG=/usr/local/etc

export SPARK_HOME=${BREW_CELLAR_DIR}/apache-spark/3.2.1/libexec

export ES_HOME=${BREW_CELLAR_DIR}/elasticsearch/7.10.2/libexec
export ES_DATA=/usr/local/var/elasticsearch
export ES_LOGS=/usr/local/var/log/elasticsearch/
export ES_CONFIG=/usr/local/etc/elasticsearch/

export KIBANA_HOME=${BREW_CELLAR_DIR}/kibana/7.10.2
export KIBANA_DATA=${KIBANA_HOME}/data
export KIBANA_CONFIG=/usr/local/etc/kibana/

export ZOOKEEPER_HOME=${BREW_CELLAR_DIR}/zookeeper/3.7.0_1/libexec

export KAFKA_HOME=${BREW_CELLAR_DIR}/kafka/3.2.0/libexec
export KAFKA_DATA=/usr/local/var/lib/kafka-logs
export KAFKA_CONFIG=${KAFKA_HOME}/config
export KAFKA_LOGS=${KAFKA_HOME}/logs

export REDIS_HOME=${BREW_CELLAR_DIR}/redis/6.2.6

export TERRAFORM_HOME=${BREW_CELLAR_DIR}/terraform/1.2.1

export KUBE_CLI_HOME=${BREW_CELLAR_DIR}/kubernetes-cli/1.24.0
export MINIKUBE_HOME=${BREW_CELLAR_DIR}/minikube/1.25.1

export HELM_HOME=${BREW_CELLAR_DIR}/helm/3.9.0

export ANACONDA_HOME=/usr/local/anaconda3
