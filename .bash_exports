export JAVA8_HOME=`/usr/libexec/java_home -v1.8`

#/Library/Java/JavaVirtualMachines/jdk-11.0.10.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-15.0.2.jdk/Contents/Home
export JAVAEX_HOME=`/usr/libexec/java_home -v15`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
