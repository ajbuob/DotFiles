export ES_DATA=/usr/local/var/elasticsearch
export ES_LOGS=/usr/local/var/log/elasticsearch/
export ES_CONFIG=/usr/local/etc/elasticsearch/

export KIBANA_HOME=${BREW_CELLAR_DIR}/kibana/6.8.6
