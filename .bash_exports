#!/usr/bin/env bash

#export AWS_PROFILE=terraform

#/Library/Java/JavaVirtualMachines/jdk1.8.0_301.jdk/Contents/Home
export JAVA8_HOME="$(/usr/libexec/java_home -v1.8.0)"

#/Library/Java/JavaVirtualMachines/jdk-11.0.12.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-16.0.2.jdk/Contents/Home
export JAVAEX_HOME=`/usr/libexec/java_home -v16`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
export HOMEBREW_EDITOR=vim

export PYENV_ROOT=~/.pyenv

export ANT_HOME=${BREW_CELLAR_DIR}/ant/1.10.11/libexec
export MVN_HOME=${BREW_CELLAR_DIR}/maven/3.8.2/libexec
export GRADLE_HOME=${BREW_CELLAR_DIR}/gradle/7.2/libexec

export TOMCAT_HOME=${BREW_CELLAR_DIR}/tomcat/10.0.10/libexec

export HADOOP_HOME=${BREW_CELLAR_DIR}/hadoop/3.3.1
export HIVE_HOME=${BREW_CELLAR_DIR}/hive/3.1.2_3/libexec

export PG_HOME=${BREW_CELLAR_DIR}/postgresql/13.4
export PG_DATA=/usr/local/var/postgres
export PG_CONFIG=/usr/local/var/postgres

export MONGO_HOME=${BREW_CELLAR_DIR}/mongodb-community/5.0.2
export MONGO_DATA=/usr/local/var/mongodb
export MONGO_LOGS=/usr/local/var/log/mongodb
export MONGO_CONFIG=/usr/local/etc

export SPARK_HOME=${BREW_CELLAR_DIR}/apache-spark/3.1.2/libexec

export ES_HOME=${BREW_CELLAR_DIR}/elasticsearch/7.10.2/libexec
export ES_DATA=/usr/local/var/elasticsearch
export ES_LOGS=/usr/local/var/log/elasticsearch/
export ES_CONFIG=/usr/local/etc/elasticsearch/

export KIBANA_HOME=${BREW_CELLAR_DIR}/kibana/7.10.2
export KIBANA_DATA=${KIBANA_HOME}/data
export KIBANA_CONFIG=/usr/local/etc/kibana/

export ZOOKEEPER_HOME=${BREW_CELLAR_DIR}/zookeeper/3.7.0_1/libexec

export KAFKA_HOME=${BREW_CELLAR_DIR}/kafka/2.8.0/libexec
export KAFKA_DATA=/usr/local/var/lib/kafka-logs
export KAFKA_CONFIG=${KAFKA_HOME}/config
export KAFKA_LOGS=${KAFKA_HOME}/logs

export TERRAFORM_HOME=${BREW_CELLAR_DIR}/terraform/1.0.6

export KUBE_CLI_HOME=${BREW_CELLAR_DIR}/kubernetes-cli/1.22.1
export MINIKUBE_HOME=${BREW_CELLAR_DIR}/minikube/1.22.0

export HELM2_HOME=${BREW_CELLAR_DIR}/helm@2/2.17.0
export HELM3_HOME=${BREW_CELLAR_DIR}/helm/3.6.3

export ANACONDA_HOME=/usr/local/anaconda3
