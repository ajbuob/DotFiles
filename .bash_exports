export TERRAFORM_HOME=${BREW_CELLAR_DIR}/terraform/0.12.20
export ANSIBLE_HOME=${BREW_CELLAR_DIR}/ansible/2.9.4/libexec
export KUBERNETES_CLI_HOME=${BREW_CELLAR_DIR}/kubernetes-cli/1.17.2

export ANACONDA_HOME=/usr/local/anaconda3
