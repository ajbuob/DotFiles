export REDIS_HOME=${BREW_CELLAR_DIR}/redis/6.2.6

export TERRAFORM_HOME=${BREW_CELLAR_DIR}/terraform/1.0.10

export KUBE_CLI_HOME=${BREW_CELLAR_DIR}/kubernetes-cli/1.22.3
export MINIKUBE_HOME=${BREW_CELLAR_DIR}/minikube/1.24.0

export HELM2_HOME=${BREW_CELLAR_DIR}/helm@2/2.17.0
