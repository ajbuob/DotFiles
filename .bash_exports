export REDIS_HOME=${BREW_CELLAR_DIR}/redis/7.0.8

export TERRAFORM_HOME=${BREW_CELLAR_DIR}/terraform/1.3.8

export KUBE_CLI_HOME=${BREW_CELLAR_DIR}/kubernetes-cli/1.26.1
export MINIKUBE_HOME=${BREW_CELLAR_DIR}/minikube/1.29.0

export HELM_HOME=${BREW_CELLAR_DIR}/helm/3.11.1

export ANACONDA_HOME=/usr/local/anaconda3
