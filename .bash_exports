#!/usr/bin/env bash

#/Library/Java/JavaVirtualMachines/jdk1.8.0_361.jdk/Contents/Home
export JAVA8_HOME="$(/usr/libexec/java_home -v1.8.0)"

#/Library/Java/JavaVirtualMachines/jdk-11.0.18.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-17.0.6.jdk/Contents/Home
export JAVA17_HOME=`/usr/libexec/java_home -v17`

#/Library/Java/JavaVirtualMachines/jdk-19.0.2.jdk/Contents/Home
export JAVAEX_HOME=`/usr/libexec/java_home -v19`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
export HOMEBREW_EDITOR=vim

export PYENV_ROOT=~/.pyenv

export ANT_HOME=${BREW_CELLAR_DIR}/ant/1.10.13/libexec
export MVN_HOME=${BREW_CELLAR_DIR}/maven/3.9.0/libexec
