#!/usr/bin/env bash

#export AWS_PROFILE=terraform

#/Library/Java/JavaVirtualMachines/jdk1.8.0_311.jdk/Contents/Home
export JAVA8_HOME="$(/usr/libexec/java_home -v1.8.0)"

#/Library/Java/JavaVirtualMachines/jdk-11.0.13.jdk/Contents/Home
export JAVA11_HOME=`/usr/libexec/java_home -v11`

#/Library/Java/JavaVirtualMachines/jdk-17.0.1.jdk/Contents/Home
export JAVAEX_HOME=`/usr/libexec/java_home -v17`

export JAVA_HOME=${JAVA11_HOME}

export BREW_CELLAR_DIR=$(brew --cellar)
export HOMEBREW_EDITOR=vim

export PYENV_ROOT=~/.pyenv

export ANT_HOME=${BREW_CELLAR_DIR}/ant/1.10.12/libexec
export MVN_HOME=${BREW_CELLAR_DIR}/maven/3.8.3/libexec
